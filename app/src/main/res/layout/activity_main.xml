<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Select Device"
                android:id="@+id/selectDeviceButton"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No device selected"
                android:id="@+id/selectedDeviceInfoTextView"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Initialize"
                android:id="@+id/initializeButton"
                android:enabled="false"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sale"
                android:id="@+id/saleButton"
                android:layout_gravity="center_horizontal"
                android:enabled="false"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Refund"
                android:id="@+id/refundButton"
                android:layout_gravity="center_horizontal"
                android:enabled="false"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TERMINATE"
                android:id="@+id/terminateButton"
                android:layout_gravity="center_horizontal"
                android:enabled="false"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deviceInformationTextView"
                android:singleLine="false"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/libraryVersionTextView"
            android:gravity="left"/>

    </LinearLayout>

</LinearLayout>
