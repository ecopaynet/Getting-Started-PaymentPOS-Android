<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_signature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Transaction Accepted. Signature:"
        android:layout_weight="0"/>

    <com.ecopaynet.module.paymentpos.SignatureView
        xmlns:signature="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signatureView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        signature:penSize="5dp"
        signature:backgroundColor="#ffffff"
        signature:penColor="#000000"
        signature:enableSignature="true"
        android:layout_margin="5dp"/>

    <Button
        android:text="Sign Transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:id="@+id/signatureContinueButton"/>

</LinearLayout>
